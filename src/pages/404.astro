---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const listOfArticles = await getCollection("articles");
const randomIndex = Math.floor(Math.random() * (listOfArticles.length - 1));

const randomlyPickedArticle = listOfArticles.at(randomIndex)!;
---

<Layout
  title="Page not found - Milton David"
  description="Oh no. The page you’re looking for does not exist"
  isArticle={false}
>
  <main class="px-6">
    <header>
      <h1 class="font-lora-bold text-supporting-600 text-[2rem]/10 mb-2">
        Page not found
      </h1>
      <p class="mb-2">Oh no. The page you’re looking for does not exist.</p>
      <p>
        You can <a href="/">Go Home</a> or check this article about <a
          href=`/articles/${randomlyPickedArticle.slug}`
          >{randomlyPickedArticle.data.title}</a
        >.
      </p>
    </header>
  </main>
</Layout>
<style>
  p {
    color: theme("colors.supporting-300");
  }

  a {
    display: inline-block;
    text-decoration: underline;
    color: theme(colors.light-link);

    &:visited {
      color: theme(colors.light-link-visited);
    }

    &:hover,
    &:focus {
      color: theme(colors.light-link-hover-focus);
    }

    &:active {
      color: theme(colors.light-link-active);
    }
  }
</style>
