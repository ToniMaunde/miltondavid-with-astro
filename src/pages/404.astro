---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const listOfArticles = await getCollection("articles");
const randomIndex = Math.floor(Math.random() * (listOfArticles.length - 1));

const randomlyPickedArticle = listOfArticles.at(randomIndex)!;
---

<Layout
  title="Page not found - Milton David"
  description="Oh no. The page you’re looking for does not exist"
>
  <main class="region" data-region="content">
    <header>
      <h1>Page not found</h1>
    </header>
    <article data-role="error-page">
      <p>Oh no. The page you’re looking for does not exist.</p>
      <p>
        You can <a href="/">go home</a> or check this article about <a
          href={`/articles/${randomlyPickedArticle.slug}`}
          >{randomlyPickedArticle.data.title}</a
        >.
      </p>
    </article>
  </main>
</Layout>
