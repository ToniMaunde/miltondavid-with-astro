---
import type { TArticle } from '../types';

interface Props {
  articles: Array<TArticle>
}

const { articles } = Astro.props;
---
<ul class="flex flex-col gap-6">
  {
    articles.map(article => (
      <li class="flex flex-col gap-2">
        <h3 class="font-overpass-mono text-supporting-gunmetal-600 text-lg/6">
          {article.title}
        </h3>
        <p class="font-overpass-medium text-supporting-gunmetal-300 text-sm/4">
          {article.description}
        </p>
        <p class="text-supporting-gunmetal-100 text-xs/4">
          ~{article.readingTime} min read <span>&nbsp‚¶Å&nbsp;</span> {article.date}
        </p>
        <p class="text-supporting-gunmetal-300 text-sm/4">Topics: App state, React.js</p>
      </li>
    ))
  }
</ul>