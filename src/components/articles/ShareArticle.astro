---
import twitter from "../../icons/socials/twitter.svg";
import linkedin from "../../icons/socials/linkedin.svg";

interface Props {
  href: string;
  title: string;
}

const TWITTER_SHARING_URL = "https://twitter.com/intent/tweet";
const LINKEDIN_SHARING_URL = "http://www.linkedin.com/shareArticle";

const { href, title } = Astro.props;
---

<div>
  <p class="">
    Share this article:
  </p>
  <ul class="">
    <li class="">
      <a
        href={`${TWITTER_SHARING_URL}?url=${href}&text=${title}&via=tonimaunde`}
        target="_blank"
        rel="noreferrer"
        class=""
      >
        <img src={twitter.src} class="" /> X | twitter
      </a>
    </li>
    <li class="">
      <a
        href={`${LINKEDIN_SHARING_URL}?mini=true&url=${href}&title=${title}&source=Milton Alberto`}
        target="_blank"
        rel="noreferrer"
        class=""
      >
        <img src={linkedin.src} class="" /> linkedin
      </a>
    </li>
  </ul>
</div>
<style scoped>
  a {
    display: flex;
    gap: theme(gap.2);
    align-items: center;
    text-decoration-line: none;

    &:visited,
    &:hover,
    &:focus,
    &:active {
      text-decoration-line: underline;
    }

    &:visited {
      color: theme(colors.link.light.visited);
    }

    &:hover,
    &:focus {
      color: theme(colors.link.light.hover-or-focus);
    }

    &:active {
      color: theme(colors.link.light.active);
    }
  }
</style>
