---
import { Image } from "astro:assets";
import logoText from "../images/logo_text.svg";
import codepenIcon from "../images/codepen.svg";
import githubIcon from "../images/github.svg";
import dribbbleIcon from "../images/dribbble.svg";
import twitterIcon from "../images/twitter.svg";
import linkedinIcon from "../images/linkedin.svg";

export const currentYear = new Date().getFullYear();

export const socialProfiles = [
  {
    href: "https://github.com/ToniMaunde",
    alt: "Github",
    icon: githubIcon,
  },
  {
    href: "https://dribbble.com/ToniMaunde",
    alt: "Dribbble",
    icon: dribbbleIcon,
  },
  {
    href: "https://www.linkedin.com/in/tonimaunde/",
    alt: "Linkedin",
    icon: linkedinIcon,
  },
  {
    href: "https://twitter.com/tonimaunde",
    alt: "Twitter",
    icon: twitterIcon,
  },
  {
    href: "https://codepen.io/ToniMaunde",
    alt: "Codepen",
    icon: codepenIcon,
  },
];
---

<footer class="px-4 py-8 mt-auto grid grid-cols-1">
  <Image
    src={logoText}
    alt="The website's logo but in text"
    height="24"
    class="my-0"
  />
  <ul class="mt-4 mb-2 flex gap-4 list-none pl-0">
    <li class="pl-0 my-0">
      <a href="/" class="no-underline text-supporting-gunmetal-300">home</a>
    </li>
    <li class="pl-0 my-0">
      <a href="/articles" class="no-underline text-supporting-gunmetal-300"
        >articles</a
      >
    </li>
  </ul>
  <ul class="flex gap-4 mt-0 mb-4 list-none pl-0">
    {
      socialProfiles.map((profile) => (
        <li class="pl-0 my-0">
          <a href={profile.href} target="_blank" rel="noreferrer">
            <Image
              src={profile.icon}
              alt={`Milton's ${profile.alt}`}
              class="my-0"
            />
          </a>
        </li>
      ))
    }
  </ul>
  <p class="text-supporting-gunmetal-300 my-0">
    Â©{currentYear} Milton David. All Rights Reserved.
  </p>
</footer>
