---
import { Icon } from "astro-icon/components";

export const currentYear = new Date().getFullYear();

export const socialProfiles = [
  {
    href: "https://github.com/ToniMaunde",
    alt: "Github",
    icon: "socials/github",
  },
  {
    href: "https://dribbble.com/ToniMaunde",
    alt: "Dribbble",
    icon: "socials/dribbble",
  },
  {
    href: "https://www.linkedin.com/in/tonimaunde/",
    alt: "Linkedin",
    icon: "socials/linkedin",
  },
  {
    href: "https://twitter.com/tonimaunde",
    alt: "Twitter",
    icon: "socials/twitter",
  },
  {
    href: "https://codepen.io/ToniMaunde",
