---
import { articleDate, computeReadingTime } from "../util";
interface Props {
  articleBody: string;
  description: string;
  createdAt: string;
  updatedAt: string;
}

const props = Astro.props;
---

<p class="text-supporting-gunmetal-100 dark:text-neutral-500 text-sm/4 my-2">
  ~{computeReadingTime(props.articleBody)} min read <span>&nbsp‚¶Å&nbsp;</span>{
    " "
  }
  {articleDate(props.createdAt, props.updatedAt)}
</p>
<p class="text-supporting-gunmetal-300 dark:text-neutral-300 text-base/6 mb-0">
  <span aria-label="Summary:" class="font-overpass-mono">Summary:</span>
  {props.description}
</p>
